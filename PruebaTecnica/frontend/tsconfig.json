{
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "allowJs": true,
      "checkJs": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  